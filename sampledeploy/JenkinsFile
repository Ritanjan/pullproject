pipeline {
   agent any
   tools {
        maven 'Maven_3.6.2' 
    }
   stages {
      stage('Build') {
         steps {
            withMaven(maven:'maven'){
                sh 'mvn -f sampledeploy/pom.xml clean'
            }
         }
		 }
      stage('Deploy') {
         steps {
            withMaven(maven:'maven'){
                 sh 'mvn -f sampledeploy/pom.xml clean'
            }
         }
      }
   }
}